<%= content_for(:title) do %>
  Nouveau commentaire
<% end %>

<div class="margin-top-and-down">
  <h1 class="text-center">Comment s'est déroulée votre prestation? </h1>
  <h3 class="text-center"><i>Laissez un commentaire</i></h3>
  <h3 class="text-center"><i class="fa fa-pencil"></i></h3>
</div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <%= simple_form_for [@booking, @review] do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :rate %>
            <%= f.input :comments %>
          </div>
          <div class="form-actions text-center">
            <%= f.submit "Enregistrer", class: "btn-gold" %>
          </div>
        <% end %>
      </div>
    </div>


