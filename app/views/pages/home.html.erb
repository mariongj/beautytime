<div class="banner">
  <div class="banner-content">
    <%= image_tag "logo_large.png", class: "padding-medium" %>
    <h1 class="padding-medium">Prenez vos rendez-vous beauté en ligne, 24h / 24h</h1>
    <div class="padding-medium">
      <div class="container">
        <div class="row">
          <%= form_tag('/home', method: :get, class: "form-inline") do %>
            <%= select_tag "Service", options_for_select("Coiffure"), prompt: "Votre soin beauté", class: "form-control" %>
            <%= select_tag "Lieu", options_for_select(@cities), prompt: "Paris", class: "form-control" %>
            <%= select_date Date.current, {}, { prompt: Date.current, class: "form-control" } %>
            <%= submit_tag "RECHERCHER", class: "btn btn-black" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

