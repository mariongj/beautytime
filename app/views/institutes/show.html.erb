<div class="banner">
  <%= image_tag @institute.picture1.url(:medium) %>
</div>

<% content_for(:after_js) do %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="white-card">
        <h1><%= @institute.name %></h1>
        <p><%= @institute.description %></p>
        <p><%= @institute.address %></p>
        <p><%= @institute.zipcode %>, <%= @institute.city %></p>
      </div>
    </div>


    <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-3">
      <div class="white-card">
        <ul class="text-left">
          <h2>Services</h2>
          <br>
            <% @services.each do |service|  %>
              <li>
                <h4><%= service.title %></h4>
                <p><%= service.description %></p>
                <p><%= service.price %>€ - <%= service.duration %>min</p>
                <p><%= link_to "Voir disponibilités", institute_service_path(@institute, service) %></p>
                <%= link_to("Reserver", new_institute_service_booking_path(@institute, service), class:"btn-black" ) %>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

