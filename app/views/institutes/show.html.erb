<h1 class="text-center"><%= @institute.name %></h1>

<p> <%= @institute.description %> </p>
<p> <%= @institute.address %> <%= @institute.zipcode %>  <%= @institute.city %> </p>

<h2>Les services offerts :</h2>

<div>
  <ul class="list-inline">
      <% @services.each do |service|  %>
        <li>
          <p><%= service.category %></p>
          <p><%= service.title %></p>
          <p><%= service.price %></p>
          <p><%= service.duration %></p>
        </li>
        <li>
          <%= link_to("Reserver", new_institute_service_booking_path(@institute, service)) %>
        </li>
      <% end %>
  </ul>
</div>


<div class="text-center"><%= link_to "Retour", institutes_path %></div>
