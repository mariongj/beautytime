<h1 class="text-center"><%= @institute.name %></h1>

<p> <%= @institute.description %> </p>
<p> <%= @institute.address %> <%= @institute.zipcode %>  <%= @institute.city %> </p>

<h2>Les services offerts :</h2>

<div>
  <ul>
      <% @services.each do |service|  %>
        <li>
          <h3><%= service.category %>: <%= service.title %></h3>
          <p><%= service.price %> €, <%= service.duration %> minutes</p>
          <p><%= link_to "Voir disponibilités", institute_service_path(@institute, service) %></p>
          <p><%= link_to("Reserver", new_institute_service_booking_path(@institute, service)) %></p>
        </li>
      <% end %>
  </ul>
</div>


<div class="text-center"><%= link_to "Retour", institutes_path %></div>
