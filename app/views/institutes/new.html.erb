<div class="margin-top-and-down">
  <h1 class="text-center">AJOUTER UN INSTITUT</h1>
  <h3 class="text-center"><i class="fa fa-pencil"></i></h3>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form">
        <%= simple_form_for [@user, @institute], html: { multipart: true } do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :city %>
          <%= f.input :zipcode %>
          <%= f.input :picture1 %>
          <%= f.input :picture2 %>
          <%= f.input :picture3 %>
          <%= f.submit class: "btn-gold" %>
        <% end %>
      </div>
    </div>
  </div>
</div>





