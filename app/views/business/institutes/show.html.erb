<% content_for :title do %>
  L'institut <%= @institute.name %>
<% end %>
<div class="banner-institute" style='<%= "background:linear-gradient(rgba(0, 0, 0, 0.51), rgba(0, 0, 0, 0.51)), url(#{image_url @institute.picture1.url(:medium) }); background-size: cover;  background-position: center center; height:600px; position:relative" %>'>



</div>




<div class="text-center">
  <h1><%= @institute.name %></h1>
  <p><%= @institute.description %></p>
  <p><%= @institute.address %></p>
  <p><%= @institute.zipcode %>, <%= @institute.city %></p>
</div>

     <div class= "text-center">
        <%= link_to "Ajouter une prestation",
          new_business_institute_service_path(@institute),
          class: "btn btn-large btn-success" %>
      </div>

<ul class="unstyled">
  <br>
    <% @services.each do |service|  %>
      <li class='white-card-list'>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <h4><%= service.title %></h4>
            </div>
            <div class="col-xs-12 col-sm-3">
              <div><%= service.price %>€ - <%= service.duration %>min</div>
            </div>
            <div class="col-xs-12 col-sm-3">
                 <ul>
                  <li class="list-inline">
                     <%= link_to edit_business_institute_service_path(service.institute, service) do %>
                       <i class="fa fa-pencil"></i> Modifier la prestation
                       <% end %>
                  </li>
                  <li class="list-inline">
                     <%= link_to business_institute_service_path(service.institute, service),
                          method: :delete,
                          data: { confirm: "Are you sure?" } do %>
                          <i class="fa fa-trash"></i> Supprimer la prestation
                        <% end %>
                  </li>
                </ul>
                <ul>
                  <li class="list-inline">
                     <%= link_to new_business_service_booking_path(service) do %>
                       <i class="fa fa-users"></i> Bloquer un rendez-vous
                       <% end %>
                  </li>
                </ul>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div>
                <%= service.description %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
</ul>


