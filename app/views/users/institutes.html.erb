<%= content_for(:title) do %>
 Mes instituts
<% end %>

<div class="title text-center">
  <h1 class="title-shadowed">MES INSTITUTS</h1>
</div>

<% @my_institutes_uniques.each do |institute| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="institute">
      <div class="institute-header" style="background-image: url('<%= institute.picture1 %>');"></div>
      <div class="institute-body">
        <h2><%= link_to institute.name, institute_path(institute), class:"gold-hover-black"%></h2>
        <% average_stars(institute).times do %>
          <i class="fa fa-star gold"></i>
        <% end %>
        <p class="description"><%= institute.description %></p>
        <p><%= institute.address %> <%= institute.zipcode %> <%= institute.city %></p>
        <div class="footer">
          <a><i><%= link_to "Prendre rendez-vous ", institute_path(institute) %></i><i class="fa fa-long-arrow-right"></i></a>
        </div>
      </div>
    </div>
  </div>
<% end %>

