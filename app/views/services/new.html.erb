<p class="text-center"><%= @institute.name %></p>

<div>
  <%= simple_form_for [@institute, @service] do |f| %>
  <%= f.error_notification %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :duration %>
    <%= f.input :category %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
